<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_tag(books_path, method: :get) do %>
  Filtrar por:
  <%= radio_button_tag 'search_type', 'book_title', true %>
  TÃ­tulo
  <%= radio_button_tag 'search_type', 'author_name' %>
  Nome (Autor)
  <%= text_field_tag 'search', nil, placeholder: 'Entre com o termo...' %>
  <%= submit_tag "Filtrar" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published at</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= book.published_at %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

